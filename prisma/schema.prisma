generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cars {
  id            String                   @id @default(uuid())
  name          String
  mark          String
  year        String                  
  km      Int
  version String
  transmission          String
  traction     String                 
  fuel     String                 
  doors        String
  absBrake     Boolean
  city          String
  type          String
  price         Int
  image         String @default("")
  slug          String @default("")
  images        Images[]
}

model Images {
  id      String      @id @default(uuid())
  src     String
  carId   String
  main    Boolean @default(false)
  car     Cars      @relation(fields: [carId], references: [id])
}

model User {
  id         String     @id @default(uuid())
  login      String
  password   String
  role       String
}